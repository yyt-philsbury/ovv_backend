// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./db/database.db"
}

model videos {
    // http://www.youtube.com/watch?v=ZedLgAF9aEg
    // link_id = ZedLgAF9aEg
    id                   String @id
    // sqlite Ints can ben 8 bytes long
    views                Int
    // YYYY-MM-DD
    original_upload_date String
    title                String
    author               String
    // YYYY-MM-DD
    added_on             String
}
